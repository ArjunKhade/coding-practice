package java_programming;

public class EvenOddFromArray {

	public static void main(String[] args) {

		int[] a = { 1, 2, 3, 4, 5, 6, 7 };

		// Extracting even numbers
//		System.out.println("Even Number:");
//		int[] odd = new int[10];
//
//		for (int i = 0; i < a.length; i++) {
